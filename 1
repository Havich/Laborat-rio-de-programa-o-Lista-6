//Faça um algoritmo que leia 10 salários. Depois de lidos e armazenados, mostre o maior valor. Utilize vetores.

//Inclusão de bibliotecas
#include <stdio.h>

//Função principal
int main()
{
//Declaração de variáveis
float salarios[10], maior;

//Entrada de dados
for(int i = 0; i < 10; i++)
{
    printf("Digite o salario %d\n", i + 1);
    scanf("%f", &salarios[i]);
    if(i == 0)
        maior = salarios[0];
    if(maior < salarios[i])
        maior = salarios[i];    
}
//Saída de dados
printf("O maior valor e = %.2f\n", maior);

//Fim da função principal
return 0;
}
